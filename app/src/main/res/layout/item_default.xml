<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/icon_white_bg"
    android:layout_width="match_parent"
    android:layout_height="44dp">
    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">
        <ImageView
            android:id="@+id/left_image"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_tom" />
        <ImageView
            android:id="@+id/left_badge"
            android:src="@drawable/icon_badge"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_alignBottom="@id/left_image"
            android:layout_alignLeft="@id/left_image"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/title_label"
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />
        <TextView
            android:id="@+id/detail_label"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/title_label"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/black65"
            android:textSize="@dimen/sp_12" />
        <TextView
            android:id="@+id/second_detail_label"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/detail_label"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_11" />
        <ImageView
            android:id="@+id/disclosure_image"
            android:layout_toRightOf="@+id/second_detail_label"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_disclosure" />
    </RelativeLayout>
</RelativeLayout>