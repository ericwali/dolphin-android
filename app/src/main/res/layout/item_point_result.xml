<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:layout_margin="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@drawable/icon_poi_location"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="地名"
                    android:id="@+id/item_poi_address"
                    android:textSize="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="(类型)"
                    android:id="@+id/item_poi_types"
                    android:textColor="@color/black70"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:text="地名详情"
                android:id="@+id/item_poi_detail"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/black70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/black10"
        android:layout_marginRight="@dimen/sp_12"
        android:layout_marginLeft="@dimen/sp_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
</LinearLayout>