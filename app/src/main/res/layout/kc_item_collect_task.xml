<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:background="@color/white80"
    android:minHeight="64dp">
    <View
        android:background="#20000000"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
        android:id="@+id/behind_view"
        android:paddingBottom="@dimen/dp_1"
        android:paddingTop="@dimen/dp_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/bind_box"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_check"
                android:text="查 看"
                android:gravity="center"
                android:background="@color/green"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_16"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/show_relative"
        android:paddingBottom="@dimen/dp_1"
        android:paddingTop="@dimen/dp_1"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent">
                    <TextView
                        android:padding="@dimen/dp_3"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:id="@+id/tv_task_name"
                        android:textSize="@dimen/dp_15"
                        android:textColor="@color/white"
                        android:background="@drawable/kc_text_blue_solid"
                        android:text="任务名"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <View
                        android:layout_marginRight="@dimen/dp_6"
                        android:background="@drawable/kc_ic_create_user_line"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/sp_15"/>
                    <TextView
                        android:id="@+id/tv_create_name"
                        android:gravity="center_vertical"
                        android:text="admin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <View
                        android:layout_marginRight="@dimen/dp_6"
                        android:background="@drawable/kc_ic_goal_hosptial_line"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/sp_15"/>
                    <TextView
                        android:id="@+id/tv_task_hospital"
                        android:gravity="center_vertical"
                        android:text="医院：湖南省人民医院"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_task_type"
                    android:background="@drawable/kc_text_orange_hollow_bg"
                    android:text="任务类型"
                    android:textColor="@color/orange"
                    android:layout_marginTop="@dimen/dp_3"
                    android:padding="@dimen/dp_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_create_time"
                    android:text="12:14"
                    android:textSize="@dimen/dp_12"
                    android:gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:background="#20000000"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
</RelativeLayout>