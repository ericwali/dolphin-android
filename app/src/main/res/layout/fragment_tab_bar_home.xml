<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    tools:context="com.dolphin.demo.ui.fragment.TabBarHomeFragment">
    <data>
        <variable name="viewModel" type="com.dolphin.demo.ui.vm.TabBarHomeViewModel" />
    </data>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--待删除代码-->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/common_app_them"
            android:gravity="center">
            <TextView android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="首 页"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />
        </LinearLayout>

        <com.amap.api.maps.MapView android:id="@+id/amap"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="14" />

        <LinearLayout android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@drawable/icon_bg_bottom_bar"
            android:gravity="center_vertical"
            android:padding="2dp">
            <LinearLayout android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1">
                <Button style="@style/pointBottomBtn"
                    android:textSize="@dimen/sp_12"
                    android:background="@drawable/icon_btn_left_radius_bg"
                    binding:onClickCommand="@{viewModel.hasArrivedClickCommand}"
                    android:text="已 到 达"
                    android:textColor="@color/white" />
                <View android:layout_width="@dimen/dp_2"
                    android:layout_height="match_parent"
                    android:background="@color/white" />
                <Button style="@style/pointBottomBtn"
                    android:textSize="@dimen/sp_12"
                    android:background="@drawable/icon_btn_right_radius_bg"
                    binding:onClickCommand="@{viewModel.beginNavidClickCommand}"
                    android:text="开 始 导 航"
                    android:textColor="@color/white" />
            </LinearLayout>
            <!--演示:待删除-->
            <LinearLayout android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button android:textSize="@dimen/sp_12"
                    android:text="文件上传"
                    android:textColor="@color/white"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    binding:onClickCommand="@{viewModel.onPictureSelector}" />
            </LinearLayout>
            <LinearLayout android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button android:textSize="@dimen/sp_12"
                    android:text="文件下载"
                    android:textColor="@color/white"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    binding:onClickCommand="@{viewModel.onFileDownLoad}" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>