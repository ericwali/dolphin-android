<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_44"
    android:background="@drawable/icon_white_item_bg"
    android:minHeight="@dimen/dp_44">
    <RelativeLayout
        android:id="@+id/behind_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">
        <LinearLayout
            android:id="@+id/swipeable_layout"
            android:layout_width="@dimen/dp_160"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_swipeable1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/icon_btn_swipeable_bg1"
                android:gravity="center"
                android:text="已读"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_10"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/btn_swipeable2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/icon_btn_swipeable_bg2"
                android:gravity="center"
                android:text="审批"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_10"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/btn_swipeable3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/icon_btn_swipeable_bg3"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_10"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/content_layout"
        android:background="@drawable/icon_white_item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/left_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true">
            <ImageView
                android:id="@+id/left_image"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_tom" />
            <ImageView
                android:id="@+id/left_badge"
                android:src="@drawable/icon_badge"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_alignBottom="@id/left_image"
                android:layout_alignLeft="@id/left_image"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/right_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title_label"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="标题"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:id="@+id/detail_label"
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/title_label"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="描述"
                android:textColor="@color/black65"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/second_detail_label"
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/detail_label"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="二级描述"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_11" />
            <ImageView
                android:id="@+id/disclosure_image"
                android:layout_toRightOf="@+id/second_detail_label"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_disclosure" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>