<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40">
    <LinearLayout
        android:id="@+id/behind_layout"
        android:layout_width="@dimen/dp_160"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">
        <TextView
            android:id="@+id/btn_swipeable1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/icon_btn_swipeable_bg1"
            android:gravity="center"
            android:text="免打扰"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/btn_swipeable2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/icon_btn_swipeable_bg2"
            android:gravity="center"
            android:text="置顶"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/btn_swipeable3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/icon_btn_swipeable_bg3"
            android:gravity="center"
            android:text="移除"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8"
            android:textStyle="bold" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/container_layout"
        android:background="@drawable/icon_white_bg_stroke1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        tools:visibility="gone">
        <RelativeLayout
            android:id="@+id/left_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:visibility="visible"
            tools:visibility="visible">
            <ImageView
                android:id="@+id/left_image"
                android:layout_width="@dimen/dp_33"
                android:layout_height="@dimen/dp_33"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/dp_6"
                android:src="@drawable/icon_dolphin" />
            <ImageView
                android:id="@+id/left_badge"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_alignLeft="@id/left_image"
                android:layout_alignBottom="@id/left_image"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_m_2"
                android:src="@drawable/icon_badge" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/left_layout"
            android:gravity="center">
            <TextView
                android:id="@+id/title_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_3"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:id="@+id/detail_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_3"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/black65"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/second_detail_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/sp_11"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/disclosure_image"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_8"
                android:src="@drawable/icon_disclosure"
                android:visibility="visible"
                tools:visibility="visible"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>