<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.dolphin.demo.ui.activity.PointSearchActivity">
    <data>
        <variable name="viewModelTest" type="com.dolphin.demo.ui.vm.PoiSearchViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_list_bg"
        android:orientation="vertical">
        <include
            android:id="@+id/include"
            layout="@layout/layout_toolbar"
            binding:toolbarViewModel="@{viewModelTest.toolbarViewModel}" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/sp_10"
            android:background="@drawable/icon_white_bg"
            android:padding="@dimen/dp_3">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_8"
                android:src="@drawable/icon_point_search" />
            <EditText
                android:id="@+id/poi_edit_word"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@color/white"
                android:maxLength="12"
                android:paddingLeft="@dimen/sp_10"
                android:textColor="@color/gray" />
            <Button
                android:id="@+id/poi_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="poiSearchCancel"
                android:text="取 消"
                android:textColor="@color/common_btn_tit"
                android:textSize="@dimen/dp_15"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sp_10"
            android:layout_marginRight="@dimen/sp_10"
            android:background="@drawable/icon_white_bg"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/poi_tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/sp_15"
                android:text="请输入目的地关键字"
                android:textSize="@dimen/dp_15" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_poi_res"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</layout>